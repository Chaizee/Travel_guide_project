<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ SplashScreen API configuration -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- System splashscreen attributes -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">2500</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <!-- Keep same background after splash until Flutter draws -->
        <item name="android:windowBackground">@color/splash_background</item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/splash_background</item>
    </style>
</resources>


